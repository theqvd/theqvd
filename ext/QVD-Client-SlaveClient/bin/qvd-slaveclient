#!/usr/lib/qvd/bin/perl

use strict;
use warnings;

use Getopt::Long;

use QVD::Client::SlaveClient;

my $help = '';
my $host = 'localhost';
my $port = 12040;

my $ret = GetOptions(
    'host|h=s' => \$host,
    'port|p=i' => \$port,
    'help|h' => \$help
);
$help = 1 unless $ret;

my $cmd = shift @ARGV;
my @args = @ARGV;

my $c = QVD::Client::SlaveClient->new($host.':'.$port);

$c->dispatch($cmd, $help, @args);
