#!/usr/lib/qvd/bin/perl

use strict;
use warnings;

use File::Spec;

BEGIN {
    my $WINDOWS = ($^O eq 'MSWin32');

    my $user_dir = File::Spec->rel2abs($WINDOWS
                                    ? File::Spec->join($ENV{APPDATA}, 'QVD')
                                    : File::Spec->join((getpwuid $>)[7] // $ENV{HOME}, '.qvd'));
    mkdir($user_dir);

    my $user_config_filename = File::Spec->join($user_dir, 'client.conf');
    $QVD::Config::USE_DB = 0;
    @QVD::Config::Core::FILES = ( ($WINDOWS ? () : ('/etc/qvd/client.conf')),
                                  $user_config_filename );
}

use QVD::Client::SlaveClient;
use Getopt::Long;

my $help = '';
my $host = 'localhost';
my $port = 12040;

my $ret = GetOptions(
    'host|h=s' => \$host,
    'port|p=i' => \$port,
    'help|h' => \$help
);
$help = 1 unless $ret;

my $cmd = shift @ARGV;
my @args = @ARGV;

my $c = QVD::Client::SlaveClient->new($host.':'.$port);

$c->dispatch($cmd, $help, @args);
