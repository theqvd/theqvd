<h2 class="h2 customizer-title" data-i18n="WAT Customizer"></h2>
<select class="js-customize-select customize-select">
    <option value="header_and_footer" data-i18n="Header & Footer"></option>         
    <option value="menu" data-i18n="Menu"></option>
    <option value="buttons_and_links" data-i18n="Buttons & Links"></option>
    <option value="tables" data-i18n="Tables"></option>
    <option value="graphs" data-i18n="Graphs"></option>
    <option value="login_screen" data-i18n="Login screen"></option>
</select>
<div class="customize-panel">
    <div name="header_and_footer" class="customize-section js-customize-section">
        <div class="color-title" data-i18n="Header logo"></div>
        <input name="cpHeaderLogo" class="js-custom-field custom-field-text" value="images/logo-header.png" data-original-value="images/logo-header.png"/>
        <div class="color-title" data-i18n="Header background"></div>
        <input name="cpHeaderBg" class="js-custom-field colorpicker" value="#d7d7d7" data-original-value="#d7d7d7"/>
        <div class="color-title" data-i18n="Footer background"></div>
        <input name="cpFooterBg" class="js-custom-field colorpicker" value="#d7d7d7" data-original-value="#d7d7d7"/>
        <div class="color-title" data-i18n="Footer text"></div>
        <input name="cpFooterText" class="js-custom-field colorpicker" value="#808080" data-original-value="#808080"/>
    </div>

    <div name="buttons_and_links" class="customize-section js-customize-section">
        <div class="color-title" data-i18n="Button1 background"></div>
        <input name="cpButton1Bg" class="js-custom-field colorpicker" value="#cb540a" data-original-value="#cb540a"/>
        <div class="color-title" data-i18n="Button1 text"></div>
        <input name="cpButton1Text" class="js-custom-field colorpicker" value="#fdfdfd" data-original-value="#fdfdfd"/>
        <div class="color-title" data-i18n="Button2 background"></div>
        <input name="cpButton2Bg" class="js-custom-field colorpicker" value="#fdfdfd" data-original-value="#fdfdfd"/>
        <div class="color-title" data-i18n="Button2 text"></div>
        <input name="cpButton2Text" class="js-custom-field colorpicker" value="#cb540a" data-original-value="#cb540a"/>
        <div class="color-title" data-i18n="Text links"></div>
        <input name="cpLink" class="js-custom-field colorpicker" value="#cb540a" data-original-value="#cb540a"/>
    </div>

    <div name="login_screen" class="customize-section js-customize-section">
        <div class="color-title" data-i18n="Login logo"></div>
        <input name="cpLoginLogo" class="js-custom-field custom-field-text" value="images/logo-login.png" data-original-value="images/logo-login.png"/>
        <div class="color-title" data-i18n="Login box background"></div>
        <input name="cpLoginBoxBg" class="js-custom-field colorpicker" value="#d7d7d7" data-original-value="#d7d7d7"/>
        <div class="color-title" data-i18n="Login box text"></div>
        <input name="cpLoginBoxText" class="js-custom-field colorpicker" value="#333" data-original-value="#333"/>
    </div>

    <div name="graphs" class="customize-section js-customize-section">
        <div class="color-title" data-i18n="Graphs color A"></div>
        <input name="cpGraphColorA" class="js-custom-field colorpicker" value="#cb540a" data-original-value="#cb540a"/>
        <div class="color-title" data-i18n="Graphs color B"></div>
        <input name="cpGraphColorB" class="js-custom-field colorpicker" value="#d7d7d7" data-original-value="#d7d7d7"/>
    </div>

    <div name="menu" class="customize-section js-customize-section">
        <div class="color-title" data-i18n="Main menu background"></div>
        <input name="cpMenuBg" class="js-custom-field colorpicker" value="#fdfdfd" data-original-value="#fdfdfd"/>
        <div class="color-title" data-i18n="Main menu text"></div>
        <input name="cpMenuText" class="js-custom-field colorpicker" value="#333" data-original-value="#333"/>
        <div class="color-title" data-i18n="Main menu border"></div>
        <input name="cpMenuBorder" class="js-custom-field colorpicker" value="#f7985e" data-original-value="#f7985e"/>
        <div class="color-title" data-i18n="Main menu background (hover)"></div>
        <input name="cpMenuHoverBg" class="js-custom-field colorpicker" value="#e35e0c" data-original-value="#e35e0c"/>
        <div class="color-title" data-i18n="Main menu text (hover)"></div>
        <input name="cpMenuHoverText" class="js-custom-field colorpicker" value="#fdfdfd" data-original-value="#fdfdfd"/>
        <div class="color-title" data-i18n="Main menu background (selected)"></div>
        <input name="cpMenuSelectedBg" class="js-custom-field colorpicker" value="#b24a09" data-original-value="#b24a09"/>
        <div class="color-title" data-i18n="Main menu text (selected)"></div>
        <input name="cpMenuSelectedText" class="js-custom-field colorpicker" value="#fdfdfd" data-original-value="#fdfdfd"/>
        <div class="color-title" data-i18n="Header menu text"></div>
        <input name="cpMenuHeaderText" class="js-custom-field colorpicker" value="#cb540a" data-original-value="#cb540a"/>
        <div class="color-title" data-i18n="Header menu text (selected)"></div>
        <input name="cpMenuHeaderSelectedText" class="js-custom-field colorpicker" value="#b24a09" data-original-value="#b24a09"/>
        <div class="color-title" data-i18n="Header submenu background"></div>
        <input name="cpSubmenuBg" class="js-custom-field colorpicker" value="#fdfdfd" data-original-value="#fdfdfd"/>
        <div class="color-title" data-i18n="Header submenu text"></div>
        <input name="cpSubmenuText" class="js-custom-field colorpicker" value="#cb540a" data-original-value="#cb540a"/>
        <div class="color-title" data-i18n="Header submenu border"></div>
        <input name="cpSubmenuBorder" class="js-custom-field colorpicker" value="#f7985e" data-original-value="#f7985e"/>
        <div class="color-title" data-i18n="Header submenu background (hover)"></div>
        <input name="cpSubmenuHoverBg" class="js-custom-field colorpicker" value="#e35e0c" data-original-value="#e35e0c"/>
        <div class="color-title" data-i18n="Header submenu text (hover)"></div>
        <input name="cpSubmenuHoverText" class="js-custom-field colorpicker" value="#fdfdfd" data-original-value="#fdfdfd"/>
    </div>
    
    <div name="tables" class="customize-section js-customize-section">
        <div class="color-title" data-i18n="Tables header background"></div>
        <input name="cpTableThBg" class="js-custom-field colorpicker" value="#d7d7d7" data-original-value="#d7d7d7"/>
        <div class="color-title" data-i18n="Tables header text"></div>
        <input name="cpTableThText" class="js-custom-field colorpicker" value="#333" data-original-value="#333"/>
        <div class="color-title" data-i18n="Tables header background (sorted column)"></div>
        <input name="cpTableSortedThBg" class="js-custom-field colorpicker" value="#737373" data-original-value="#737373"/>
        <div class="color-title" data-i18n="Tables header text (sorted column)"></div>
        <input name="cpTableSortedThText" class="js-custom-field colorpicker" value="#fdfdfd" data-original-value="#fdfdfd"/>
    </div>
</div>
<div style="clear:both;"></div>
<br>
<a class="button2 fa fa-eye js-preview-custom-btn custom-btn" data-i18n="Preview"></a>
<a class="button2 fa fa-reply js-restore-custom-btn custom-btn" data-i18n="Restore"></a>
<a class="button fa fa-file-text-o js-export-custom-btn custom-btn" data-i18n="Export CSS file"></a>