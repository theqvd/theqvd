Requires: perl-QVD-UP

%description
User Portal for qvd

%prep
%setup -q


%build

make %{?_smp_mflags}


%install
rm -rf $RPM_BUILD_ROOT
make install DESTDIR=$RPM_BUILD_ROOT

# Some files got ambiguous python shebangs, we fix them after everything else is done
pathfix.py -pni "%{__python3} %{py3_shbang_opts}" %{buildroot}/usr/lib/qvd/up/lib/thirds/noVNC/utils/*


%clean
rm -rf $RPM_BUILD_ROOT


%files
/usr/lib/qvd/up
%defattr(-,root,root,-)
%doc



